<form method="GET" action="/getNews">

    <div class="form-group">
        <input type="text" name="search" id="search" class="form-control" 
            placeholder="Please enter a topics to search">
    </div>

    <div class="row">
        <div class="col">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" value="us">
            <!--label class="form-check-label" for="inlineRadio1">USA</label-->
            <img src="us.png" alt="">
          </div>
        </div>
        <div class="col">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" value="uk">
            <!--label class="form-check-label" for="inlineRadio2">England</label-->
            <img src="uk.png" alt="">
          </div>
        </div>
        <div class="col">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" value="fr">
            <!--label class="form-check-label" for="inlineRadio3">France</label-->
            <img src="fr.png" alt="">
          </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" value="sg">
            <!--label class="form-check-label" for="inlineRadio1">Singapore</label-->
            <img src="sg.png" alt="">
          </div>
      </div>
      <div class="col">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" value="jp">
            <!--label class="form-check-label" for="inlineRadio2">Japan</label-->
            <img src="jp.png" alt="">
          </div>
      </div>
      <div class="col">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" value="cn">
            <!--label class="form-check-label" for="inlineRadio3">China</label-->
            <img src="cn.png" alt="">
          </div>
      </div>
    </div>

  <div class="form-group">
    <label for="sel1">Select list:</label>
    <select class="form-control" id="sel1" name="category">
      <option value='business'>Business</option>
      <option value='entertainment'>Entertainment</option>
      <option value='general'>General</option>
      <option value='health'>Health</option>
      <option value='science'>Science</option>
      <option value='sports'>Sports</option>
      <option value='technology'>Technology</option>
    </select>
  </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-lg btn-primary">Search</button>
    </div>

</form>
